<div class="page-container container">
  <header class="page-header">
    <h1>{{ page.title }}</h1>
    {% if page.content != blank %}
      <div class="page-description">
        {{ page.content }}
      </div>
    {% endif %}
  </header>
  
  <div class="products-grid">
    {% for product in collections.all.products limit: 6 %}
      <div class="product-card">
        <a href="{{ product.url }}" class="product-card-image">
          {% if product.featured_image != blank %}
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
          {% endif %}
          
          {% if product.images[1] != blank %}
            <img src="{{ product.images[1] | img_url: 'medium' }}" alt="{{ product.title }} Hover">
          {% endif %}
        </a>
        
        {% assign product_tags = product.tags | join: ',' %}
        {% if product_tags contains 'Best Seller' %}
          <div class="product-tag">Best Seller</div>
        {% endif %}
        
        <div class="product-card-content">
          <h3>
            <a href="{{ product.url }}">{{ product.title }}</a>
          </h3>
          
          <div class="product-card-description">
            {{ product.description | strip_html | truncatewords: 20 }}
          </div>
          
          <ul class="product-card-features">
            {% for tag in product.tags limit: 2 %}
              {% unless tag contains 'Best Seller' %}
                <li>{{ tag }}</li>
              {% endunless %}
            {% endfor %}
          </ul>
          
          <a href="{{ product.url }}" class="button">Shop Now</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .page-description {
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
  }
</style> 