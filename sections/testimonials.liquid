<section class="testimonials">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <div class="testimonials-subtitle">
      <p>{{ section.settings.subheading }}</p>
    </div>
    
    <div class="testimonials-grid">
      {% for block in section.blocks %}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          {% if block.settings.avatar != blank %}
            <div class="testimonial-avatar">
              <img src="{{ block.settings.avatar | img_url: '100x100', crop: 'center' }}" alt="{{ block.settings.author }}" loading="lazy">
            </div>
          {% endif %}
          
          <div class="testimonial-content">
            <p>"{{ block.settings.content }}"</p>
          </div>
          
          <p class="testimonial-author">{{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Pet Parents Are Saying"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Heartwarming Reviews From the GumPaw Family"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "content",
          "label": "Testimonial Content",
          "default": "Add your testimonial here"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name",
          "default": "Happy Customer"
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Author Avatar"
        }
      ]
    }
  ],
  "presets": [
    {
