{% liquid
  assign image = section.settings.image
  assign mobile_image = section.settings.mobile_image | default: section.settings.image
%}

<div class="hero-banner">
  <div class="hero-banner__content page-width">
    <div class="hero-banner__text-content">
      <h1 class="hero-banner__title">{{ section.settings.title }}</h1>
      <div class="hero-banner__text">{{ section.settings.text }}</div>
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
    {%- if section.settings.show_badges -%}
      <div class="hero-banner__badges">
        <div class="hero-badge">
          <span class="hero-badge__icon">{% render 'icon-fda' %}</span>
          <span class="hero-badge__text">FDA Regulated</span>
        </div>
        <div class="hero-badge">
          <span class="hero-badge__icon">{% render 'icon-vet' %}</span>
          <span class="hero-badge__text">Veterinarian Approved</span>
        </div>
        <div class="hero-badge">
          <span class="hero-badge__icon">{% render 'icon-pet' %}</span>
          <span class="hero-badge__text">Loved By Pets</span>
        </div>
        <div class="hero-badge">
          <span class="hero-badge__icon">{% render 'icon-quality' %}</span>
          <span class="hero-badge__text">Human Quality Ingredients</span>
        </div>
        <div class="hero-badge">
          <span class="hero-badge__icon">{% render 'icon-guarantee' %}</span>
          <span class="hero-badge__text">Money Back Guarantee</span>
        </div>
      </div>
    {%- endif -%}
  </div>
  <div class="hero-banner__image-container">
    {%- if image != blank -%}
      {{ image | image_url: width: 2000 | image_tag:
        loading: 'eager',
        sizes: '100vw',
        class: 'hero-banner__image hero-banner__image--desktop',
        alt: image.alt | escape
      }}
    {%- endif -%}
    {%- if mobile_image != blank -%}
      {{ mobile_image | image_url: width: 1100 | image_tag:
        loading: 'eager',
        sizes: '100vw',
        class: 'hero-banner__image hero-banner__image--mobile',
        alt: mobile_image.alt | escape
      }}
    {%- endif -%}
  </div>
</div>

{% style %}
.hero-banner {
  position: relative;
  background: {{ section.settings.background_color }};
  color: {{ section.settings.text_color }};
  padding: 80px 0;
  overflow: hidden;
}

.hero-banner__content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.hero-banner__text-content {
  max-width: 600px;
}

.hero-banner__title {
  font-size: 48px;
  line-height: 1.2;
  margin: 0 0 20px;
  font-weight: bold;
}

.hero-banner__text {
  font-size: 20px;
  line-height: 1.5;
  margin-bottom: 30px;
}

.hero-banner__badges {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 20px;
  margin-top: 40px;
}

.hero-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 10px;
}

.hero-badge__icon {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-badge__text {
  font-size: 14px;
  font-weight: 500;
}

.hero-banner__image-container {
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 100%;
}

.hero-banner__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-banner__image--mobile {
  display: none;
}

@media screen and (max-width: 989px) {
  .hero-banner {
    padding: 60px 0;
  }

  .hero-banner__title {
    font-size: 36px;
  }

  .hero-banner__text {
    font-size: 18px;
  }

  .hero-banner__image-container {
    position: relative;
    width: 100%;
    height: 300px;
    margin-top: 40px;
  }

  .hero-banner__image--desktop {
    display: none;
  }

  .hero-banner__image--mobile {
    display: block;
  }

  .hero-banner__badges {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media screen and (max-width: 749px) {
  .hero-banner {
    padding: 40px 0;
  }

  .hero-banner__title {
    font-size: 28px;
  }

  .hero-banner__text {
    font-size: 16px;
  }
}
{% endstyle %}

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "The Future of Pet Vitamins is Here"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Premium vitamin supplements designed to support your pet's health and wellness. Made with human-grade ingredients.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show trust badges",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %} 