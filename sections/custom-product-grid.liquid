{{ 'custom-product-grid.css' | asset_url | stylesheet_tag }}


<div class="custom-product-grid-wrapper padding-top-75 padding-bottom-75 page-container no-mb-padding" id="shop">
  <div class="custom-product-grid">

<h3 class="title-section align-center mb-padding-right-left padding-bottom-25">{{ section.settings.heading }}</h3>
    <p class="sub-title align-center padding-bottom-50  mb-padding-right-left">{{ section.settings.subtitle }}</p>
    <div class="grid-container">
      {% for block in section.blocks %}
        {% assign product = all_products[block.settings.product_handle] %}
        <div class="product-card">
          <!-- Main Image -->
  {% if block.settings.label != blank %}
              <span class="label">
              
                {{ block.settings.label }}
              </span>
            {% endif %}
          <a href="{{ product.url }}" class="product-link">
            <div class="image-container">
              <img src="{{ block.settings.main_image | img_url: '533x533' }}" alt="{{ product.title }}" class="main-image" loading="lazy">
              {% if block.settings.hover_image %}
                <img src="{{ block.settings.hover_image | img_url: '533x533' }}" alt="Hover image of {{ product.title }}" class="hover-image" loading="lazy">
              {% endif %}
            </div>
          </a>

        <div class="content-product-card">
          <!-- Product Title -->
          <h3 class="product-title">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </h3>

          <!-- Product Description -->
          <div class="product-description">
            {{ block.settings.description }}
          </div>

          <!-- Features -->
          <ul class="features-list">
            {% if block.settings.feature_1 != blank %}
              <li>
              
                {{ block.settings.feature_1 }}
              </li>
            {% endif %}
            {% if block.settings.feature_2 != blank %}
              <li>
           
                {{ block.settings.feature_2 }}
              </li>
            {% endif %}
            {% if block.settings.feature_3 != blank %}
              <li>
                
                {{ block.settings.feature_3 }}
              </li>
            {% endif %}
          </ul>

          <!-- Price -->
      

          <!-- Shop Button -->
      <a href="{{ product.url }}" class="button_grid_product  custom-parallax-section__button">
Shop Now
     <span class="product-price" style="display: none;"> From {{ product.price | money_without_trailing_zeros }}</span>
</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [

     {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Our Gummies"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Description",
      "default": "From Woof to Wow Treats for Happy Healthy Days"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "product",
          "id": "product_handle",
          "label": "Select Product"
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Main Image"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image"
        },
 {
          "type": "text",
          "id": "label",
          "label": "Product Description"

        },

        {
          "type": "textarea",
          "id": "description",
          "label": "Product Description",
          "default": "Add a short description for the product."
        },
        {
          "type": "text",
          "id": "feature_1",
          "label": "Feature 1",
          "default": "Feature 1 text"
        },
      
        {
          "type": "text",
          "id": "feature_2",
          "label": "Feature 2",
          "default": "Feature 2 text"
        },
      
        {
          "type": "text",
          "id": "feature_3",
          "label": "Feature 3",
          "default": "Feature 3 text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Grid",
      "blocks": [
        {
          "type": "product_card"
        }
      ]
    }
  ]
}
{% endschema %}
