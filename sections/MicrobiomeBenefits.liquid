{% schema %}
{
  "name": "Microbiome Benefits",
  "settings": [],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Microbiome Benefits",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "title": "Better Digestion",
            "description": "Food breakdown and the absorption of nutrients are improved when the gut microbiome is balanced, helping prevent issues such as diarrhea and constipation."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<div class=" padding-bottom-75  MicrobiomeBenefits "  id="reasons" >
<h2 class="title-section padding-bottom-50 mb-padding-right-left" >Top 7 Reasons Dogs Need <span style="color:#ff4d00">a Healthy Microbiome</span></h2>

<div class="custom-swiper-section">
  
  <div class="custom-swiper swiper">
    <div class="custom-swiper-wrapper swiper-wrapper">
      {% for block in section.blocks %}
        <div class="custom-swiper-slide swiper-slide">
          <div class="benefit-card">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: '100x100' }}" alt="" class="benefit-icon">
            {% endif %}
            <h3 class="benefit-title">{{ block.settings.title }}</h3>
            <p class="benefit-description">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
   <div class="custom-swiper-button-prev">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g id="Left"><path d="M14,17a1,1,0,0,1-.707-.293l-4-4a1,1,0,0,1,0-1.414l4-4a1,1,0,1,1,1.414,1.414L11.414,12l3.293,3.293A1,1,0,0,1,14,17Z" style="fill:#1c1b1e"></path></g></svg></div>
    <div class="custom-swiper-button-next">
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g id="Left"><path d="M14,17a1,1,0,0,1-.707-.293l-4-4a1,1,0,0,1,0-1.414l4-4a1,1,0,1,1,1.414,1.414L11.414,12l3.293,3.293A1,1,0,0,1,14,17Z" style="fill:#1c1b1e"></path></g></svg>
</div>
  </div>
</div>

<div class="mobile-benefits mb-padding-right-left">
  {% for block in section.blocks %}
    <div class="benefit-dropdown">
      <button class="dropdown-toggle"><span>  <img src="{{ block.settings.icon | img_url: '100x100' }}" alt="" class="benefit-icon"> {{ block.settings.title }} </span> <span class="animated-plus group-expanded:rotate" aria-hidden="true"></span></button>
      <div class="dropdown-content">
        {% if block.settings.icon %}
      
        {% endif %}
        <p>{{ block.settings.description }}</p>
      </div>
    </div>
  {% endfor %}
</div>
</div>
<style>
  .custom-swiper-section { display: none; }
  .mobile-benefits { display: block; }


  @media (max-width: 768px) {
    .MicrobiomeBenefits .title-section {
        min-width: 100% !important;
    }

     .custom-swiper-button-prev,  .custom-swiper-button-next {
       display: none!important;
     }
   .benefit-dropdown .dropdown-toggle {
    justify-content: space-between;
    padding-right: 10px;
   }
    .benefit-dropdown     .benefit-icon {
        max-width: 26px;
        max-height: 60px;
        margin-right: 10px !important;
        margin-left: 0px !important;
    }


.benefit-icon {
    width: 45px!important;
      height: 95px!important;
}

    .benefit-card {
     border-radius: 15px !important;
      min-height: 270px!important;
}
.benefit-description, .benefit-title {
    padding-right: 20px !important;
    padding-left: 20px !important;
}

}
.benefit-description {
    font-size: 0.9rem!important;
}

  .custom-swiper-button-prev {
    left: 5%;
    position: absolute;
    top: calc(50% - 25px);
    z-index: 2;
}

.custom-swiper-button-next {
  right: 5%;
    position: absolute;
    top: calc(50% - 25px);
    z-index: 2;
}

.custom-swiper-button-next svg{
      transform: rotate(180deg);
    margin-left: 2px;
  }

  .custom-swiper-button-prev,  .custom-swiper-button-next {
          width: 50px;
        display: flex;
        transition: all 0.3s ease 0s;
        border: 0px solid #ffffff;
        background: #ffffff;
        height: 50px;
    border-radius: 50%;
    background: #ffffff;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, .15);
}
  .custom-swiper-button-prev svg,  .custom-swiper-button-next svg {
          height: 28px;
        width: 28px;
  }

        .custom-swiper-section { display: block; }

   .dropdown-toggle span{
    display: flex;
    align-items: center;
    color: #20120B;
    font-family: "DM Sans", Sans-serif;
    font-size: 1.2rem;
    line-height: 1.5;
    font-weight: 600;
   }

  .benefit-dropdown {
    margin-bottom: 10px;
    border-radius: 15px;
  }

    .dropdown-toggle {
    display: flex;
    align-items: center;
    }
    
     .MicrobiomeBenefits .title-section span {
      display: block;
    }
  }

   .mobile-benefits { display: none!important; }

  @media (min-width: 768px) {
    .custom-swiper-section { display: block; }
 
  }


  .MicrobiomeBenefits h2{
    text-align: center;
  }
  .custom-swiper {
    width: 100%;
    overflow: hidden;
  }

.custom-swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1.11rem;
}

  .m-b-3rem {
    margin-bottom: 3rem;
  }

.benefit-card {
    text-align: center;
    border-radius: 1.39rem;
    background-color: #F8F7F4;
    border-radius: 0.56rem;
      min-width: 100%;
    min-height: 20rem;
}

.benefit-icon {
    width: 4.17rem;
    object-fit: contain;
    height: 8.33rem;
    object-fit: contain;
    object-position: center;
    margin-left: auto;
    margin-right: auto;
}

.benefit-title {
    margin-top: 0rem;
    color: #20120B;
    font-family: "DM Sans", Sans-serif;
        padding-right: 20px;
    padding-left: 20px;
    font-size: 1.2rem;
    line-height: 1.5;
    font-weight: 600;
}

.benefit-description {
    padding: 0rem 1.39rem 1.39rem 1.39rem;
    font-family: "DM Sans", Sans-serif;
    font-size: 0.89rem;
    margin-top: 0.56rem;
    line-height: 1.5;
    font-weight: 400;
}

  .benefit-dropdown {  background-color: #F8F7F4; padding: 5px 10px 5px 20px; cursor: pointer; }
  .dropdown-content {
    max-height: 0;
    padding-left: 0px!important;
    overflow: hidden;
    transition: max-height 0.3s ease-out, padding 0.3s ease-out;
    padding: 0 10px;
  }
  .dropdown-content.open {
padding-top: 0px !important;
    padding-left: 0px !important;
    max-height: 300px;
    padding: 10px;
  }
  .dropdown-toggle { background: none; border: none; width: 100%; text-align: left; font-size: 18px; cursor: pointer; }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var toggles = document.querySelectorAll(".dropdown-toggle");
    toggles.forEach(function(toggle) {
      toggle.addEventListener("click", function() {
        var content = this.nextElementSibling;
        content.classList.toggle("open");
      });
    });

    var swiper = new Swiper('.custom-swiper', {
      loop: true,
       slidesPerView: 1.5,
      navigation: {
        nextEl: '.custom-swiper-button-next',
        prevEl: '.custom-swiper-button-prev',
      },
         spaceBetween: 0,
     breakpoints: {
        768: { slidesPerView: 2.5 },
        1024: { slidesPerView: 4 },
        1280: { slidesPerView: 4.5 },
    1450: { slidesPerView: 4.5 },
  1600: { slidesPerView: 5.5 },
       1800: { slidesPerView: 5.5},
    }
    });
  });
</script>
