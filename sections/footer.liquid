  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "Let's Stay Connected"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Make life healthier for your dog. Sign up here for updates!"
    },
    {
      "type": "header",
      "content": "Links"
    },
    {
      "type": "text",
      "id": "links_heading",
      "label": "Links Heading",
      "default": "Customer Service"
    },
    {
      "type": "header",
      "content": "About"
    },
    {
      "type": "text",
      "id": "about_heading",
      "label": "About Heading",
      "default": "About GumPaws"
    },
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About Text",
      "default": "Providing your dog with the care they deserve, one wellness gummy at a time for a happier life."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "url",
      "id": "facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Â© 2024 Your Store Name | All rights reserved."
    }
  ]
}
{% endschema %} 