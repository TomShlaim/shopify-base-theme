{{ 'hero-section.css' | asset_url | stylesheet_tag }}

<div class="custom-hero-section">


  <div class="hero-video-wrapper">
  {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: 'master' }}"  style="">
{% else %}
    <video autoplay loop muted playsinline class="hero-video">
      <source id="myVideo"  src="{{ section.settings.background_video_url }}" type="video/mp4">
    </video>
{% endif %}
  </div>

  <div class="hero-content in_slider  padding-top-75 padding-bottom-75">
    <h1 class="hero-title">{{ section.settings.slide_text }}
    {% if template == 'index' %}
        <i>Dog Supplements</i> is Here
    {% endif %}
     
</h1>
    {% if section.settings.slide_subtext %}
      <p class="hero-subtext">{{ section.settings.slide_subtext }} </p>
    {% endif %}
    <a href="{{ section.settings.slide_button_link }}" class="cta_button  custom-parallax-section__button">
      {{ section.settings.slide_button_text }}
