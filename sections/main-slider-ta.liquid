{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "slide_text",
      "label": "Slide Text",
      "default": "Your Slide Text"
    },
    {
      "type": "text",
      "id": "slide_subtext",
      "label": "Slide Subtext"
    },
    
    {
      "type": "image_picker",
      "id": "image",
      "label": "Center Image"
    },
    {
      "type": "url",
      "id": "slide_button_link",
      "label": "Slide Button Link"
    },
    {
      "type": "text",
      "id": "slide_button_text",
      "label": "Slide Button Text",
      "default": "Click Here"
    },
    {
      "type": "url",
      "id": "background_video_url",
      "label": "Background Video URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}


